@page
@model Zajecia_PS04.Pages.EditModel
@{

    ViewData["Title"] = "Edytuj Produkt";
}

<div class="container">
    <form class="form-horizontal" method="post">

                <input asp-for="EditProduct.id" class="form-control" type="hidden">
        <div class="form-group">
            <label asp-for="EditProduct.name" class="control-label col-sm2"></label>
            <div class="col-sm-6">
                <input asp-for="EditProduct.name" class="form-control">
                <span asp-validation-for="EditProduct.name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EditProduct.price" class="control-label col-sm2"></label>
            <div class="col-sm-6">
                <input asp-for="EditProduct.price" class="form-control">
                <span asp-validation-for="EditProduct.price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn btn-primary">Zatwierdź</button>
            </div>
        </div>
    </form>
</div>